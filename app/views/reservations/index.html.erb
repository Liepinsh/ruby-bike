<div class="container">
  <div class="row">
    <div class="col-xs-7 center">
      <h1>Bike reservations</h1>
    </div>
    <div class="col-xs-7 info-block">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-12 table-head">
              <div class="col-xs-3 center table-head-column">
                <h3>Employee</h3>
              </div>
              <div class="col-xs-1 center table-head-column">
                <h3>Bike</h3>
              </div>
              <div class="col-xs-3 center">
                <h3>From</h3>
              </div>
              <div class="col-xs-3 center">
                <h3>Till</h3>
              </div>
              <div class="col-xs-2 center table-head-edit">
                <h3>+ / -</h3>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 table-content">
              <div class="col-xs-3 table-content-employee">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5 data-reservation-attribute="employee_full_name"><%= reservation.employee.full_name %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-1 center">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5 data-reservation-attribute="bike_name"><%= reservation.bike.name %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-3 center">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5 data-reservation-attribute="starting"><%= reservation.starting.strftime("%H:%M %Y.%m.%d") %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-3 center">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5 data-reservation-attribute="till"><%= reservation.till.strftime("%H:%M %Y.%m.%d") %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-1 center edit">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5><%= link_to 'Edit', edit_reservation_path(reservation) %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-1 center destroy">
                <% @reservations.each do |reservation| %>
                  <div data-reservation-id="<%= reservation.id %>">
                    <h5><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <br>
        </div>
      </div>
    </div>
    <div class="col-xs-7 center new-reservation">
      <h4><%= link_to '+ New Reservation', new_reservation_path %></h4>
    </div>
  </div>
</div>
