<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Till</th>
      <th>Employee</th>
      <th>Bike</th>
      <th>TAKEN</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.from %></td>
        <td><%= reservation.till %></td>
        <td><%= reservation.employee.full_name %></td>
        <td><%= reservation.bike.ride %></td>

        <td><%= reservation.taken %></td>

        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

