<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Starting</th>
      <th>Till</th>
      <th>Employee</th>
      <th>Bike</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr data-reservation-id="<%= reservation.id %>">
        <td data-reservation-attribute="starting"><%= reservation.starting %></td>
        <td data-reservation-attribute="till"><%= reservation.till %></td>
        <td data-reservation-attribute="employee_full_name"><%= reservation.employee.full_name %></td>
        <td data-reservation-attribute="bike_name"><%= reservation.bike.name %></td>

        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

