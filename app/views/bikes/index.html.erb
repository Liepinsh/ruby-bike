<div class="container">
  <div class="row">
    <div class="col-xs-7 center">
      <h1>Bikes</h1>
    </div>
    <div class="col-xs-7 info-block">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-12 table-head">
              <div class="col-xs-6 center">
                <h3>Name</h3>
              </div>
              <div class="col-xs-6 center">
                <h3>+ / -</h3>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 table-content">
              <div class="col-xs-8 table-content-bike-name">
                <% @bikes.each do |bike| %>
                  <div data-bike-id="<%= bike.id %>">
                    <h5 data-bike-attribute="name"><%= bike.name %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-1 table-content-edit center edit">
                <% @bikes.each do |bike| %>
                  <div data-bike-id="<%= bike.id %>">
                    <h5><%= link_to 'Edit', edit_bike_path(bike) %></h5>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-2 table-content-destroy center destroy">
                <% @bikes.each do |bike| %>
                  <div data-bike-id="<%= bike.id %>">
                    <h5><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <br>
          </div>
        </div>
      </div>
    <div class="col-xs-7 center new-reservation">
      <h4><%= link_to '+ New Bike', new_bike_path %></h4>
    </div>
  </div>
</div>